#!/bin/bash
# should never really expire, so just to track new games

evry 1 week -backup_chess && {
	wait-for-internet
	readonly BACKUP_DIR="${HOME}/data/chessdotcom"
	printlog "chessdotcom:Running export..."
	arctee -r 3 "${BACKUP_DIR}/{utcnow}.json" -- python3 -m chessdotcom_export export seanbreckenridge || send-error 'chessdotcom export: failed to backup chess games'
}
