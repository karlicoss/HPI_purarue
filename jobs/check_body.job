#!/bin/bash
# remind me to log my weight

evry 3 hours -checkbody && {
	printlog "check_weight:checking..."
	# cross platform script that sends notifications
	# https://sean.fish/d/cross-platform/notify
	QR="$(hpi query --recent 1w my.body.weight)" || send-error "check_body: hpi query failed"
	[[ "$(jq 'length' <<<"$QR")" == '0' ]] && notify "havent updated weight in more than a week!"
}
