#!/bin/bash

# should never really expire, so just to track new games
evry 1 week -backup_chess && {
	wait-for-internet
	readonly BACKUP_DIR="${HOME}/data/chessdotcom"
	# exit if not on my linux machine
	[[ "$(uname -s)" == "Linux" ]] || exit 0
	printlog "chessdotcom:Running export"
	arctree -r 3 "${BACKUP_DIR}/{utcnow}.json" -- python3 -m chessdotcom_export export seanbreckenridge
}
